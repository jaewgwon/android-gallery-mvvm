<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.PhotoDetailActivity">
    <ImageView
        android:id="@+id/photo_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/photo"/>
    <ProgressBar
        android:id="@+id/photo_pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/photo_iv_image"
        app:layout_constraintTop_toTopOf="@id/photo_iv_image"
        app:layout_constraintBottom_toBottomOf="@id/photo_iv_image"
        app:layout_constraintRight_toRightOf="@id/photo_iv_image"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_wrapper_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/margin_big"
        android:background="#B3000000">
        <TextView
            android:id="@+id/photo_tv_photographer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photographer"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/photo_tv_photographerUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photographer"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_tv_photographer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>